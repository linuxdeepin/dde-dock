<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <enum id="com.deepin.dde.desktop.IconDefaultSize">
        <value nick="16" value="16"/>
        <value nick="24" value="24"/>
        <value nick="32" value="32"/>
        <value nick="48" value="48"/>
        <value nick="64" value="64"/>
        <value nick="96" value="96"/>
        <value nick="128" value="128"/>
    </enum>

    <schema path="/com/deepin/dde/desktop/" id="com.deepin.dde.desktop">
        <key name="auto-arrangement" type="b">
            <default>false</default>
            <summary>Auto-arrangement items on desktop.</summary>
            <description>Items on desktop will always be placed one by one, and order doesn't mater.</description>
        </key>

        <key name="stickup-grid" type="b">
            <default>true</default>
            <summary>Whether enable stickup grid.</summary>
            <description>If true, the items on desktop will get the position stickup to grid.</description>
        </key>

        <key name="show-computer-icon" type="b">
            <default>false</default>
            <summary>Whether show computer icon on desktop.</summary>
            <description>If true, show it.</description>
        </key>

        <key name="show-home-icon" type="b">
            <default>false</default>
            <summary>Whether show home icon on desktop.</summary>
            <description>If true, show it.</description>
        </key>

        <key name="show-trash-icon" type="b">
            <default>false</default>
            <summary>Whether show trash icon on desktop.</summary>
            <description>If true, show it.</description>
        </key>

        <key name="show-trashed-item-number" type="b">
            <default>true</default>
            <summary>Whether show trashed item number on contextmenu.</summary>
            <description>If true, show it.</description>
        </key>

        <key name="icon-default-size" enum="com.deepin.dde.desktop.IconDefaultSize">
            <default>'48'</default>
            <summary>The default icon size on desktop.</summary>
            <description>All Possible value are '16', '24', '32', '48', '64', '96', '128'</description>
        </key>

        <key name="icon-zoom-level" type="i">
            <range min="50" max="500"/><!-- % -->
            <default>100</default>
            <summary>Default icon zoom level.</summary>
            <description>Defaut icon zoom level used by the icon view.</description>
        </key>
    </schema>
</schemalist>
